  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --watch",
    "gen-schema-types": "ts-node src/scripts/createTypes.ts",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 src/**/*.graphql dist"
  },
  "jest": {
    "rootDir": "./src",
    "globalSetup": "./utils/testing/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "./node_modules/",
      "./dist"
    ]
  }
